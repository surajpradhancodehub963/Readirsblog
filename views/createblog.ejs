<%- include('./partials/header.ejs') %>
<section id="addblog">
    <h1>Write your thoughts</h1>
    <form action="/addblog" method="post" enctype="multipart/form-data">
        <div class="form_control mb-5">
            <label for="fullname">Full name<span style="color: red">*</span></label>
            <input type="text" id="fullname" name="fullname" />
        </div>
        <div class="form_control mb-5">
            <label for="email">email<span style="color: red">*</span></label>
            <input type="email" id="email" name="email" placeholder="example@gmail.com"/>
        </div>
        <div class="form_control mb-5">
            <label for="blogTittle">Blog Tittle<span style="color: red">*</span></label>
            <input type="text" id="blogTittle" name="blogTittle" />
        </div>
        <div class="form_control mb-5">
            <label for="textarea" class="mb-2">write your blog<span style="color: red">*</span></label>
            <textarea name="blogtext" id="textarea" rows="10"></textarea>
        </div>
        <div class="form_control_file mb-5">
            <label for="blog_photo" class="mb-2">Upload article image<span style="color: red">*</span></label>
            <input type="file" name="blogPhoto" id="blog_photo">
        </div>
        <div class="mb-5">
            <button type="submit" class="form_control_button">Submit</button>
        </div>
    </form>
</section>
<%- include('./partials/footer.ejs') %>